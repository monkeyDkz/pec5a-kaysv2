rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // KYC verification documents - only authenticated users can upload their own
    match /verifications/{userId}/{fileName} {
      allow read: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024 && // Max 10 MB
        request.resource.contentType.matches('image/.*'); // Images only
    }

    // Delivery proof photos - drivers can upload, admin can read
    match /deliveries/{deliveryId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }

    // User avatars - users can manage their own
    match /avatars/{userId}/{fileName} {
      allow read: if true; // Public avatars
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024 && // Max 5 MB
        request.resource.contentType.matches('image/.*');
    }

    // Product images - merchants and admins
    match /products/{productId}/{fileName} {
      allow read: if true; // Public product images
      allow write: if request.auth != null &&
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }

    // Shop images - merchants and admins
    match /shops/{shopId}/{fileName} {
      allow read: if true; // Public shop images
      allow write: if request.auth != null &&
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }

    // Chat attachments
    match /chats/{chatId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 &&
        (request.resource.contentType.matches('image/.*') ||
         request.resource.contentType.matches('application/pdf'));
    }

    // Helper: check if user is admin
    function isAdmin() {
      return request.auth != null &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
